extends layout.pug

block content
  table#results-table.table.table-striped
    thead
      tr
        th Achternaam
        th Voornaam
        th Voorvoegsel
        th Geboren
        th Overleden
        th Geboorteplaats
    tbody
      each item in rows
        tr
          td=item.achternaam
          td=item.voornaam
          td=item.voorvoegsel
          td=moment(item.geboren).format('DD-MM-YYYY')
          td=moment(item.overleden).format('DD-MM-YYYY')
          td=item.geboorteplaats